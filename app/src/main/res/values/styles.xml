<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>


    <!--  Main Activity -->
    <style name="MainAct" />
    <style name="MainAct.TabBar">
        <item name="colorPrimary">@color/facebookColor</item>
        <item name="tabSelectedTextColor">@color/facebookColor</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>
    <style name="MainAct.TabBar.TextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainAct.ActionBar" />
    <style name="MainAct.ActionBar.TextAppearance">
        <item name="android:textSize">26sp</item>
    </style>
    <style name="MainAct.BottomNavBar">
    </style>
    <style name="MainAct.BottomNavBar.TextInactive">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mainAct.bottomNav.textInactiveSize</item>
    </style>
    <style name="MainAct.BottomNavBar.TextActive">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mainAct.bottomNav.textActiveSize</item>
    </style>


    <!--  Login Activity  -->
    <style name="LoginAct" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <!--  OfficeViewer Activity -->
    <style name="OfficeViewerAct" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
    <style name="OfficeViewerAct.ActionBar"/>
    <style name="OfficeViewerAct.ActionBar.TitleTextTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="font">@font/googlesans_regular</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="OfficeViewerAct.ActionBar.SubtitleTheme">
        <item name="font">@font/googlesans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>



    <style name="NotificationFragmentTabBarTheme">
        <item name="colorPrimary">@color/facebookColor</item>
        <item name="tabSelectedTextColor">@color/facebookColor</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="elevation">28dp</item>
    </style>




    <style name="NewsTabBarTextTheme" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RulesTabBarTextTheme" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="font">@font/googlesans_regular</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>



</resources>