<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TableLayout
        android:id="@+id/container"
        android:background="@drawable/calendar_item_view_bg"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TableLayout
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/scheduleSubjectName"
                    android:hint="Lập trình Ứng dụng di động &amp; Game 1"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="marquee"
                    android:singleLine="true" />
                <TableRow android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/scheduleType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:textColor="#03A9F4"
                        android:textColorHint="#2196F3"
                        android:hint="Lý thuyết"/>
                    <TextView
                        android:id="@+id/scheduleTeacher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:textColor="#FF9800"
                        android:textColorHint="#FF9800"
                        android:hint="Nguyễn Thị Minh Nương"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/scheduleDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="20-11-2020"/>
                    <TextView
                        android:id="@+id/scheduleRoom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="2PM01"/>
                </TableRow>
                <TableRow android:paddingTop="5dp">
                    <TextView
                        android:id="@+id/schedulePeriod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Ca 1 -> 3"/>
                    <TextView
                        android:id="@+id/scheduleExactTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="07:00 - 09:25"/>
                </TableRow>
            </TableLayout>

            <FrameLayout
                android:id="@+id/scheduleLocator"
                android:foreground="?attr/selectableItemBackground"
                android:background="@color/card_bottom_color"
                android:layout_alignParentRight="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Chỉ\nđường"/>
            </FrameLayout>
        </TableRow>
    </TableLayout>

</layout>