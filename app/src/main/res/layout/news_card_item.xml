<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItem"
    android:layout_height="@dimen/news_card_height"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="30dp"
    app:cardCornerRadius="@dimen/news_card_radius"
    app:cardElevation="1dp">

    <RelativeLayout
        android:background="@color/news_card_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/cardTitleBound"
            android:foreground="@drawable/card_ripple_bg"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="110dp" >
            <TextView
                android:id="@+id/cardTitle"
                android:transitionName="articleTitleTransition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/primaryTextColor"
                android:hint="Title"/>
        </FrameLayout>

        <View
            android:layout_below="@id/cardTitleBound"
            android:layout_width="match_parent"
            android:layout_height="0.15dp"
            android:background="#6DB6B6B6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/cardDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:hint="01-01-2020"/>
            <TextView
                android:id="@+id/cardIsNew"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/cardDate"
                android:layout_toLeftOf="@id/cardFavoriteBtn"
                android:textStyle="bold"
                android:textColor="#00A507"
                android:hint="Má»›i"
                />
            <ImageButton
                android:id="@+id/cardFavoriteBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/cardShareBtn"
                android:layout_marginRight="10dp"
                android:background="?actionBarItemBackground"
                android:paddingHorizontal="15dp"
                android:src="@drawable/ic_heart_outline" />

            <ImageButton
                android:id="@+id/cardShareBtn"
                android:src="@drawable/icon_share"
                android:tint="@color/primaryTextColor"
                android:background="?actionBarItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>