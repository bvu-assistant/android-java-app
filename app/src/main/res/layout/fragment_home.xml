<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.home.HomeFragment">

    <data>
        <variable
            name="viewModel"
            type="com.bvu.assistant.ui.main.home.HomeFragmentViewModel" />
    </data>

    <ScrollView
        android:id="@+id/refresher"
        android:clipToPadding="false"
        android:background="@color/primaryBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/summary"
                    android:elevation="0dp"
                    android:layout_below="@id/cover"
                    android:background="@drawable/home_summary_bg"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="-0.05dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="85dp"
                    android:paddingBottom="10dp"
                    android:paddingHorizontal="15dp">
                    <TextView
                        android:id="@+id/txtStudentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/homeFrm.txtStudentName_size"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        android:textColorHint="@android:color/transparent"
                        android:hint="Student name"/>
                    <TextView
                        android:id="@+id/txtStudentDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/homeFrm.txtDepartment_size"
                        android:textIsSelectable="true"
                        android:textAlignment="center"
                        android:textColor="@color/primaryTextColor"
                        android:textColorHint="@android:color/transparent"
                        android:hint="Department"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/homeFrm.cover_height">
                    <ImageView
                        android:src="@drawable/cs2_min"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:background="@drawable/home_frm_cover_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="visible"
                    android:id="@+id/imvAvatar"
                    android:src="#f0e9e9"
                    android:elevation="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/homeFrm.avatar_size"
                    android:layout_height="@dimen/homeFrm.avatar_size"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-90dp"
                    android:layout_below="@id/cover"
                    app:civ_border_width="5dp"
                    app:civ_border_color="#fff"
                    />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="3dp">
                    <TableLayout
                        android:id="@+id/functionsBounder"
                        android:background="@color/primaryWhiteBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <LinearLayout
                                android:id="@+id/btnViewProfile"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:src="@drawable/ic_id"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.firstTitle" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btnViewRoadMap"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_target" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.secondTitle"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btnViewOffice365"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:src="@drawable/ic_hierarchy"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.thirdTitle" />
                            </LinearLayout>
                        </TableRow>
                        <TableRow>
                            <LinearLayout
                                android:id="@+id/btnViewLiability"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:src="@drawable/ic_money"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.fourthTitle" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btnViewReceipt"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:src="@drawable/ic_invoice"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.fifthTitle"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btnViewAward"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:src="@drawable/ic_medalofhonor"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.sixthTitle" />
                            </LinearLayout>
                        </TableRow>
                        <TableRow>
                            <LinearLayout
                                android:id="@+id/btnViewLearningScores"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:src="@drawable/ic_data_analytics"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.seventhTitle" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btnViewExercisingScores"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:src="@drawable/ic_save_water"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.eighthTitle"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btnViewAttendanceInfo"
                                android:background="?selectableItemBackground"
                                android:padding="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:src="@drawable/ic_clock"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/homeFrm.gridTextPadding"
                                    android:textAppearance="@style/HomeFragment.GridTextAppearance"
                                    android:text="@string/homeFrm.grid.ninthTitle" />
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primaryWhiteBackground"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtCGPA"
                                android:layout_columnWeight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="CGPA"
                                android:padding="10dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textIsSelectable="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/primaryTextColor"/>
                            <TextView
                                android:id="@+id/txtBorrowedCredits"
                                android:layout_columnWeight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Tín chỉ nợ"
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textIsSelectable="true"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/primaryTextColor"/>
                        </GridLayout>
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/learningCurveChart"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/homeFrm.learningCurveChart_height"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primaryWhiteBackground"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điểm danh vắng mặt"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/primaryTextColor"
                            />
                        <LinearLayout
                            android:id="@+id/attendanceInfoCard"
                            android:background="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</layout>