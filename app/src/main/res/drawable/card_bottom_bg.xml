<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/news_card_border_width" android:color="@color/card_border_color"/>
            <corners android:bottomLeftRadius="@dimen/news_card_radius" android:bottomRightRadius="@dimen/news_card_radius"/>
        </shape>
    </item>
    <item android:top="@dimen/news_card_border_width">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_bottom_color" />
            <corners android:bottomLeftRadius="@dimen/news_card_radius" android:bottomRightRadius="@dimen/news_card_radius"/>
        </shape>
    </item>
</layer-list>